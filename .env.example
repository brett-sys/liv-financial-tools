# APITemplate.io API key (used for Business Card PDF generation)
# Get yours at https://apitemplate.io
APITEMPLATE_API_KEY=your_api_key_here

# Go High Level CRM Integration
# Get your API key: GHL Settings > Integrations > Private Integrations
# Location ID: from URL when logged in (app.gohighlevel.com/v2/location/{LOCATION_ID}/...)
# Workflow ID: from the workflow URL in GHL
# File Custom Field ID: create a "File Upload" custom field in GHL Settings > Custom Fields
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_location_id_here
GHL_WORKFLOW_ID=your_workflow_id_here
GHL_FILE_CUSTOM_FIELD_ID=your_custom_field_id_here
GHL_ENABLED=false

# Call Logger - Google Sheets Weekly Report
# Create a Google Cloud service account, download the JSON key file,
# and save it as call_logger/credentials.json
# Then create a Google Sheet, share it with the service account email,
# and paste the Sheet ID from the URL below
CALL_LOG_SHEET_ID=your_google_sheet_id_here
CALL_LOGGER_SECRET_KEY=change-me-to-a-random-string
CALL_LOGGER_PORT=5055

# LIFI Agent Toolkit – Web Push Notifications (VAPID keys)
# Generate keys: python -c "from pywebpush import webpush; from py_vapid import Vapid; v=Vapid(); v.generate_keys(); print('Private:', v.private_pem()); print('Public:', v.public_key)"
# Or use: https://web-push-codelab.glitch.me/
VAPID_PRIVATE_KEY=
VAPID_PUBLIC_KEY=
VAPID_CLAIMS_EMAIL=brett@fflliv.com

# Lead Manager – Lead Distribution Dashboard
# Uses the same credentials.json as the Call Logger (Google service account)
# Create a Google Sheet for leads, share it with the service account email,
# and paste the Sheet ID below.
LEAD_SHEET_ID=your_lead_google_sheet_id_here
LEAD_WORKSHEET_NAME=Leads
LEAD_MANAGER_SECRET_KEY=change-me-to-a-random-string
LEAD_MANAGER_PORT=5060

# SMTP (Gmail) – used by Lead Manager to email leads to agents
# Enable 2FA on your Gmail, then generate an App Password:
# https://myaccount.google.com/apppasswords
SMTP_EMAIL=your_gmail@gmail.com
SMTP_PASSWORD=your_gmail_app_password
